<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">
        
        <ImageView
            android:id="@+id/pb_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/populer_kroton"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/pb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/populer_kroton"
            android:layout_toRightOf="@id/pb_image"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/colorAccent"
            android:lineHeight="20dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/pb_image"/>

        <RatingBar
            android:id="@+id/pb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/pb_title"
            android:layout_toRightOf="@id/pb_image"
            android:layout_marginLeft="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/pb_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/populer_kroton_desc"
            android:layout_toRightOf="@id/pb_image"
            android:layout_below="@id/pb_rating"
            android:padding="10dp"
            android:fontFamily="@font/brandon_grotesque_light"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>